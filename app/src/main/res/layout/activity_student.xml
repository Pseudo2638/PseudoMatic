<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backk"
    tools:context="com.example.hp.pseudomatic.StudentActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <Button
                android:layout_width="wrap_content"
                android:id="@+id/back3"
                android:text="back"
                android:background = "@drawable/roundedbutton"
                android:layout_height="20dp"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cources Enrolled In:"
                android:textColor="@color/aqua"
                android:textStyle="bold"
                android:layout_marginBottom="40dp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Cornsilk"
                android:text="Entrepreneurship"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Cornsilk"
                android:text="Web Technologies"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Cornsilk"
                android:text="Human Resource Management"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Cornsilk"
                android:text="Advanced Wireless Networks"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Cornsilk"
                android:text="Project- II"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="290dp"
            android:weightSum="1">

            <Button
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text=" Mark Automatically"
                android:background = "@drawable/roundedbutton"
                android:layout_weight="1" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background = "@drawable/roundedbutton"
                android:text="Mark Manually"/>
        </LinearLayout>



</RelativeLayout>
